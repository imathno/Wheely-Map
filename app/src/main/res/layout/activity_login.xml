<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        tools:visibility="gone" />
    
    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="@dimen/dimens_button_width_activity_login"
        android:layout_height="wrap_content"
        android:text="@string/button_text_sign_out_activity_login"
        android:gravity="center"
        android:visibility="visible"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/sign_in_status"
        android:layout_width="@dimen/dimens_text_box_width_activity_login"
        android:layout_height="@dimen/dimens_text_box_height_activity_login"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_below="@+id/sign_out_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />
</RelativeLayout>