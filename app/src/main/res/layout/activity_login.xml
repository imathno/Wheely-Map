<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />
    
    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="@dimen/dimens_button_width_activity_login"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_text_sign_out_activity_login"
        android:visibility="visible" />

    <TextView
        android:id="@+id/sign_in_status"
        android:layout_width="@dimen/dimens_text_box_width_activity_login"
        android:layout_height="@dimen/dimens_text_box_height_activity_login"
        android:layout_gravity="center"
        android:layout_marginTop="42dp" />
</LinearLayout>