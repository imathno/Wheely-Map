<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    
    <Button
        android:id="@+id/button_current_location"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:textSize="5dp"
        android:layout_weight="0.1"
        android:text="@string/button_text_current_location_register_ramp_activity" />
    
    <ImageView
        android:id="@+id/image_view_ramp"
        android:layout_width="@dimen/dimens_image_view_width_register_ramp_activity"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:layout_height="152dp" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="@dimen/dimens_description_text_box_width_register_ramp_activity"
        android:layout_height="@dimen/dimens_button_height_register_ramp_activity"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:hint="@string/edit_text_description_hint_register_ramp_activity" />

    <Button
        android:id="@+id/button_register_ramp"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_text_register_ramp_register_ramp_activity"
        android:textSize="10dp" />

</LinearLayout>