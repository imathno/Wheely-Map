<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1" >

    <ImageView
        android:id="@+id/image_view_ramp"
        android:layout_width="217dp"
        android:layout_gravity="center"
        android:layout_height="152dp"
        android:layout_weight="0.2"
        android:background="@color/colorLightGrey"/>

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="@dimen/dimens_description_text_box_width_register_ramp_activity"
        android:layout_height="@dimen/dimens_button_height_register_ramp_activity"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_weight="0.4"
        android:layout_gravity="center"
        android:hint="@string/edit_text_description_hint_register_ramp_activity" />

    <Button
        android:id="@+id/button_register_ramp"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/button_text_register_ramp_register_ramp_activity"
        android:textSize="10dp" />

</LinearLayout>